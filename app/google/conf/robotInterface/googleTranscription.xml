<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE robot PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">
<robot name="googleTranscription" build="2" portprefix="/googleTranscription" xmlns:xi="http://www.w3.org/2001/XInclude">
    <devices>
        <device name="googleSpeechTranscription" type="googleSpeechTranscription">
            <param extern-name="transcription_lang" name="language_code">
                it-IT
            </param>
        </device>
        <device name="transcriptionWrap" type="speechTranscription_nws_yarp">
            <action phase="startup" level="5" type="attach">
                <paramlist name="networks">
                    <elem name="subdeviceGoogle">
                        googleSpeechTranscription
                    </elem>
                </paramlist>
            </action>
            <action phase="shutdown" level="5" type="detach" />
        </device>
    </devices>
</robot>
